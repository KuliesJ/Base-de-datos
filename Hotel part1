#include<iostream>

using namespace std;

//Persona
class Persona{
	public:
		char Nombre[50];
		char Dir[50];
		char Telefono[20];
		int DNI;
};

//Cliente
class Cliente: public Persona{
	public:
		char fecha_i[21];
		char fecha_f[21];
		float pago;
		int Reserva;
};

class Cliente clientes[100];

//Empleado
class Trabajador: public Persona{
	public:
		float sueldo;
		int ID_trabajador;
};

//Cuartos
class Cuarto{
	public:
		int numero;
		int precio;
		int estado;
		int camas;
		char Tipo[20];
		class Cliente cliente;
};

class Cuarto cuartos[20];

class Trabajador trabajadores[100];

void Registrar_cuarto(){
	std::cout << "\nTipo de habitacion"; std::cin >> cuartos[1].Tipo;
	std::cout<<"\nNumero de cuarto: ";std::cin>>cuartos[1].numero;
	std::cout<<"\nPrecio: ";std::cin>>cuartos[1].precio;
	cuartos[1].estado='N';
	std::cout<<"\nNumero de camas: ";std::cin>>cuartos[1].camas;
}

void Buscar_cuartos(){
	for(int i=0;i<20;i++){
		if (cuartos[i].estado=='N'){
			std::cout<<"El cuarto "<<i<<" esta vacio.";
		}
	}
}


void Registrar_cliente(){
	std::cout<<"\nNombre del cliente: ";std::cin>>cuartos[1].cliente.Nombre;
	std::cout<<"\nDirección: ";std::cin>>cuartos[1].cliente.Dir;
	std::cout<<"\nTeléfono: ";std::cin>>cuartos[1].cliente.Telefono;
	std::cout<<"\nDNI: ";std::cin>>cuartos[1].cliente.DNI;
	std::cout<<"\nFecha de ingreso: (DDMMAAAA)";std::cin>>cuartos[1].cliente.fecha_i;
	std::cout<<"\nFecha de salida: (DDMMAAAA)";std::cin>>cuartos[1].cliente.fecha_f;
	std::cout<<"\nPago adelantado: ";std::cin>>cuartos[1].cliente.pago;
}

void MostrarClientes() { //MUESTRA A LOS CLIENTES HOSPEDADOS O REGISTRADOS
	std::cout << "\n *******Cliente 1 *******";
	std::cout << "\nNombre del cliente: "<< cuartos[1].cliente.Nombre;
	std::cout << "\nDirección: "<< cuartos[1].cliente.Dir;
	std::cout << "\nTeléfono: "<< cuartos[1].cliente.Telefono;
	std::cout << "\nDNI: "<<cuartos[1].cliente.DNI;
	std::cout << "\nNumero del cuarto de la reserva "<< cuartos[1].cliente.Reserva;
	std::cout << "\nFecha de ingreso: (DDMMAAAA)"<< cuartos[1].cliente.fecha_i;
	std::cout << "\nFecha de salida: (DDMMAAAA)"<< cuartos[1].cliente.fecha_f;
	std::cout << "\nPago adelantado: "<< cuartos[1].cliente.pago;
}





int main(){
	int operacion;
	while (true){
		std::cout << "\nIngrese el numero de la operacion que quiere realizar\n";
		std::cout << "\n1.- Registrar cuarto \n"; //va a contener la info de la habitacion y si esta ocupada o no
		std::cout << "\n2.- Buscar habitaciones vacias \n"; //nombre,telefono,deireccion,dni,fecha inicio, fehca final, pago
		std::cout << "\n3.- Registrar clientes \n"; // numero del cuarto, precio, estado, cuantas cams
		std::cout << "\n4.- Mostrar huespedes \n"; //muestra huespedes ingresados
		
		std::cin>>operacion;
		switch(operacion){
		case 1:
			Registrar_cuarto();
			break;
		case 2:
			Buscar_cuartos();
			break;
		case 3:
			Registrar_cliente(); 
			break;
		case 4:
			MostrarClientes();
			break;

		default:
		   	break;
		}
	}
	return 0;
}
